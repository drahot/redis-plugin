<idea-plugin>
    <id>io.github.drahot.redis-plugin</id>
    <name>Redis Explorer</name>
    <vendor email="hotterdragon@gmail.com" url="https://github.com/drahot/redis-plugin">DraHot</vendor>

    <description><![CDATA[IntelliJ Redis Manipulate Plugin]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="AddRedisAction" class="io.github.drahot.redis_plugin.actions.AddRedisAction" text="Add Redis Database" icon="AllIcons.General.Add"/>
        <action id="RemoveRedisAction" class="io.github.drahot.redis_plugin.actions.RemoveRedisAction" text="Remove Redis Database" icon="AllIcons.General.Remove" />
    </actions>
</idea-plugin>